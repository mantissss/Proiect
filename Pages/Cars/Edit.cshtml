@page
@model Proiect.Pages.Cars.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Car.ID" />
            <div class="form-group">
                <label asp-for="Car.Brand" class="control-label"></label>
                <input asp-for="Car.Brand" class="form-control" />
                <span asp-validation-for="Car.Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Model" class="control-label"></label>
                <input asp-for="Car.Model" class="form-control" />
                <span asp-validation-for="Car.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Price" class="control-label"></label>
                <input asp-for="Car.Price" class="form-control" />
                <span asp-validation-for="Car.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.AppearanceDate" class="control-label"></label>
                <input asp-for="Car.AppearanceDate" class="form-control" />
                <span asp-validation-for="Car.AppearanceDate" class="textdanger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.DealerID" class="control-label">Dealer Name</label>
                <select asp-for="Car.DealerID" class="form-control" asp-items="ViewBag.DealerID">
                </select>
                <span asp-validation-for="Car.DealerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.FuelID" class="control-label">Fuel</label>
                <select asp-for="Car.FuelID" class="form-control" asp-items="ViewBag.FuelID">
                </select>
                <span asp-validation-for="Car.FuelID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="table">
                    <table>
                        <tr>
                            @{
                                int cnt = 0;
                                foreach (var cat in Model.AssignedCategoryDataList)
                                {
                                    if (cnt++ % 3 == 0)
                                    {
                                    @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox"
                                               name="selectedCategories"
                                               value="@cat.CategoryID"
                                               @(Html.Raw(cat.Assigned ? "checked=\"checked\"" : "")) />
                                        @cat.CategoryID @: @cat.Name
                                    @:</td>
                                }
                            @:</tr>
                            }
                        </table>
                    </div>
                    <div class="table">
                        <table>
                            <tr>
                                @{
                                    int cnt2 = 0;
                                    foreach (var cat in Model.AssignedGadgetDataList)
                                    {
                                        if (cnt2++ % 3 == 0)
                                        {
                                        @:</tr><tr>
                                        }
                                        @:<td>
                                            <input type="checkbox"
                                                   name="selectedGadgets"
                                                   value="@cat.GadgetID"
                                                   @(Html.Raw(cat.Assigned ? "checked=\"checked\"" : "")) />
                                            @cat.GadgetID @: @cat.Name
                                        @:</td>
                                    }
                                @:</tr>
                                }
                            </table>
                        </div>
                        @* <div class="form-group">
                    <div class="table">
                <table>
                    <tr>
                        @{
                            int cnt = 0;
                            foreach (var cat in Model.AssignedGadgetDataList)
                            {
                                if (cnt++ % 3 == 0)
                                {
                                @:</tr><tr>
                                }
                                @:<td>
                                    <input type="checkbox"
                                           name="selectedGadgets"
                                           value="@cat.GadgetID"
                                           @(Html.Raw(cat.Assigned ? "checked=\"checked\"" : "")) />
                                    @cat.GadgetID @: @cat.Name
                                @:</td>
                            }
                        @:</tr>
                        }
                    </table>
                </div> *@
                    </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
